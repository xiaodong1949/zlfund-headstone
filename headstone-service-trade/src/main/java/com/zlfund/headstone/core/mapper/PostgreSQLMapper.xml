<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zlfund.headstone.core.mapper.PostgreSQLMapper">

  <select id="getCurrentDate" resultType="string">
    select TO_CHAR(CURRENT_TIMESTAMP, 'YYYYMMDD')
  </select>

  <select id="getCurrentTime" resultType="string">
    select TO_CHAR(CURRENT_TIMESTAMP, 'HH24MISS')
  </select>
  
  <select id="getCurrentTimeStamp" resultType="date">
    select CURRENT_TIMESTAMP
  </select>

</mapper>