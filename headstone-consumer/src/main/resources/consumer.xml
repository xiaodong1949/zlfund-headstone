<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<dubbo:application name="headstone-demo-consumer" />
	<!-- 
	这种配置不好使，某个节点宕机导致无法上报
    <dubbo:registry protocol="zookeeper" address="10.234.99.247:2181,10.234.99.248:2181,10.234.99.247:2182" />
          应统一这样的配置：address="zookeeper://10.234.99.247:2181;zookeeper://10.234.99.247:2182;zookeeper://10.234.99.248:2181" 
    -->
	<!--
    <dubbo:registry address="zookeeper://10.234.99.247:2181;zookeeper://10.234.99.247:2182;zookeeper://10.234.99.248:2181" />
 	-->

	<dubbo:registry address="zookeeper://10.234.99.244:2181" />

	<dubbo:monitor protocol="registry"/>
	<dubbo:reference id="accountManageFacade" interface="com.zlfund.headstone.facade.account.service.AccountManageFacade" version="1.0"/>
	<dubbo:reference id="accountQueryFacade" interface="com.zlfund.headstone.facade.account.service.AccountQueryFacade" version="1.0" />
</beans>